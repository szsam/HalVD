[+]
LLVM_DIR=/usr/lib/llvm-14
#LLVM_DIR=~/llvm-project-llvmorg-14.0.6/build/Debug

[project-init]
command=rm -rf build && mkdir build && cd build && cmake -DLT_LLVM_INSTALL_DIR=$(+LLVM_DIR) -DCMAKE_BUILD_TYPE=Debug ..
cwd=<root>
errorformat=
save=2

[project-build]
command=cmake --build build -j
cwd=<root>
errorformat=%f:%l:%m
save=2

[project-run]
#command=$(+LLVM_DIR)/bin/opt -load-pass-plugin lib/libFindMMIOFunc.so -load-pass-plugin lib/libFindHALBypass.so --passes='print<hal-bypass>' --disable-output <root>/../InfiniTime/build/src/pinetime-app-1.10.0.out.bc 2> InfiniTime.out
